<div class="row">
	<div class="text-center user">
		<img width="32px" src="<%= @post.user.gravatar_url %>" /> <a href="/user/<%= @post.user.id %>"><%= @post.user.username %></a>
	</div>
	<div class="text-center content">
		<%= @post.content %>
	</div>
</div>
<div class="row">
		<% @post.comments.each do |comment| %>
	<div class="text-center user">
		<img width="32px" src="<%= @post.user.gravatar_url %>" /> <a href="/user/<%= comment.user.id %>"><%= comment.user.username %></a>
	</div>
	<div class="text-center content">
		<%= comment.content %>
		<% end %>
	</div>
</div>